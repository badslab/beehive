#!/usr/bin/env python

from pathlib import Path

tf = Path('./templates')

data = dict(
    stylecss = open(tf / 'styles.css').read(),
    bdsjs = open(tf / 'bds.js').read(),
    menu = open(tf / 'menu.html').read(),
)

template = open(tf / 'frontpage.html.template', 'r').read()
output = template.format(**data)

with open(Path("bokeh") / "index.html", 'wt') as F:
    F.write(output)
